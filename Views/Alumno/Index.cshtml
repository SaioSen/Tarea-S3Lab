@model Tarea_S3Lab.Models.Alumno
@{
    ViewData["Title"] = "Alumno";
}

<h1>@ViewData["Title"]</h1>


<div class="text-center">
    <h1 class="display-4">Formulario de Registro de Alumnos</h1>

    <form asp-controller="Alumno" asp-action="Crear">

        <label asp-for="Nombres" class="control-label"></label>
        <input asp-for="Nombres" class="form-control" type="text" placeholder="Escriba el nombres" />

        <label asp-for="Apellidos" class="control-label"></label>
        <input asp-for="Apellidos" class="form-control" type="text" placeholder="Escriba el apellido" />

        <label asp-for="DNI" class="control-label"></label>
        <input asp-for="DNI" class="form-control" type="text" placeholder="DNI" />

        <label asp-for="Genero" class="control-label"></label>
        Masculino
        <input asp-for="Genero" class="form-control" type="radio" value="M" />
        Femenino
        <input asp-for="Genero" class="form-control" type="radio" value="F" />

        </br>
        <label>Fecha de Nacimiento:</label>
        <input asp-for="Time" class="form-control" type="date"/>

        <label asp-for="Carrera" class="control-label"></label>
        <select asp-for="Carrera" class="custom-select" id="inputGroupSelect01">
            <option velue="Sistemas">Sistemas</option>
            <option value="Aeronautica">Aeronautica</option>
            <option value="Civil">Civil</option>
            <option value="Industrial">Industrial</option>
            <option value="Arquitectura">Arquitectura</option>
        </select>

        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>

</div>